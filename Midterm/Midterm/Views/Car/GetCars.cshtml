
@{
    ViewBag.Title = "GetCars";
}

<h2>Cars</h2>
<table class="table table-dark">
	<thead>
		<tr>
			<th scope="col">Name</th>
			<th scope="col">Year</th>
			<th scope="col">Horsepower</th>
			<th scope="col">Speed</th>
			<th scope="col">Price</th>
		</tr>
	</thead>
	<tbody>
		@{ 
			foreach (var car in @ViewBag.Cars) {
				@:<tr>
					@:<td scope="row">@car.name</td>
					@:<td scope="row">@car.year</td>
					@:<td scope="row">@car.horsePower</td>
					@:<td scope="row">@car.speed</td>
					@:<td scope="row">@car.price</td>
                    @:<td scope="row">@Html.ActionLink("Edit", "EditCar", new {carId = car.id})</td>
                    @:<td scope="row">@Html.ActionLink("Delete", "DeleteCar", new {carId = car.id})</td>
				@:</tr>
			}
		}
		@ViewBag.id
		</tbody>
</table>

