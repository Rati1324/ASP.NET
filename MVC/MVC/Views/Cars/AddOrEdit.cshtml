@model MVC.Models.CarDTO

@{
    ViewBag.Title = "Edit";
}

<h2>View</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.CarId)
        
